@using System.Security.Claims;
@model UselessCMS.Models.Accounts.LoginViewModel


<div class="col-12">
    <div class="card">
        <div class="card-header">
            <h3>Login</h3>
        </div>
        <div class="card-body">
            <form asp-controller="Account" asp-action="Login" asp-route-returnurl="@ViewData["ReturnUrl"]" method="post" class="form-horizontal" role="form">

                    <partial name="_ValidationSummary" />

                    <div class="form-group">
                        <label asp-for="Username"></label>
                        <input asp-for="Username" type="text" class="form-control" />
                        <small class="form-text text-muted">Must be an email address.</small>
                        <div class="invalid-feedback" style="display:block;">
                            <span asp-validation-for="Username"></span>          
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password"></label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <div class="invalid-feedback" style="display:block;">
                            <span asp-validation-for="Password"></span>
                        </div>
                    </div>

                    <div class="form-group form-check">
                        <input asp-for="RememberMe" class="form-check-input" type="checkbox">
                        <label asp-for="RememberMe" class="form-check-label"></label>
                        <div class="invalid-feedback" style="display:block;">
                            <span asp-validation-for="RememberMe"></span>
                        </div>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Login</button>
                    </div>
                </form>
        </div>
    </div>
</div>